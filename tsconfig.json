{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",  // Asegúrate de que este campo esté presente
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"] // Esta línea está correcta
        },
        "types": [
            "node",
            "express"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "api/**/*.ts"  // Esto asegura que incluya todos los archivos .ts en la carpeta api
    ],
    "exclude": [
        "node_modules",  // Para evitar compilar la carpeta node_modules
        "dist"           // Para evitar compilar la carpeta de salida
    ]
}
