{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "allowJs": true, 
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": [
            "node",
            "express"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "api/**/*.ts",
        "public/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"  // Asegúrate de que esto esté aquí
    ]
}
